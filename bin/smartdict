#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require 'rubygems'
require 'ruby-debug'

require 'smartdict'
require 'smartdict/runner'

Smartdict.env = :user

args = ARGV.clone

Smartdict.load_plugins

# TODO :mode Smartdict.run to Runner.run
Smartdict.run
Smartdict::Runner.run(args)
